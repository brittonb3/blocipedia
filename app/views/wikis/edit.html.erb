<h1>Edit Wiki</h1>

 <div class="row">
   <div class="col-md-8">
     <%= form_for @wiki do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
       </div>
       <div class="form-group">
         <%= render partial: 'wikis/form', locals: { f: f} %>
       </div>
       <div class="form-group">
         <% @users.each do |user| %>
           <div class="checkbox">
             <%= check_box_tag "collaborator_ids[]", user.id, @wiki.user_ids.include?(user.id), :id => "collaborator_ids_#{user.id}" %>
             <%= label_tag "collaborator_ids_#{user.id}", user.email %>
           </div>
         <% end %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>
